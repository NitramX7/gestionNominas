<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acciones -->
    <record id="action_gestion_nomina" model="ir.actions.act_window">
        <field name="name">Nóminas</field>
        <field name="res_model">gestion.nomina</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Gestiona las nominas de los empleados.</p>
        </field>
    </record>

    <record id="action_gestion_bonificacion" model="ir.actions.act_window">
        <field name="name">Bonificaciones / Deducciones</field>
        <field name="res_model">gestion.bonificacion</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Consulta o edita bonificaciones y deducciones vinculadas a una nómina.</p>
        </field>
    </record>

    <record id="action_gestion_declaracion" model="ir.actions.act_window">
        <field name="name">Declaraciones</field>
        <field name="res_model">gestion.declaracion</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Declaraciones anuales por empleado.</p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_gestion_nominas_root" name="Gestión Nóminas" sequence="10" />

    <menuitem id="menu_gestion_nomina" name="Nóminas"
        parent="menu_gestion_nominas_root"
        action="action_gestion_nomina"
        sequence="10" />

    <menuitem id="menu_gestion_bonificacion" name="Bonificaciones / Deducciones"
        parent="menu_gestion_nominas_root"
        action="action_gestion_bonificacion"
        sequence="20" />

    <menuitem id="menu_gestion_declaracion" name="Declaraciones"
        parent="menu_gestion_nominas_root"
        action="action_gestion_declaracion"
        sequence="30" />

    <!-- Vistas Nomina -->
    <record id="view_gestion_nomina_list" model="ir.ui.view">
        <field name="name">gestion.nomina.list</field>
        <field name="model">gestion.nomina</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="employee_id" />
                <field name="fecha" />
                <field name="sueldo_base" />
                <field name="total_bonificaciones" />
                <field name="total_deducciones" />
                <field name="irpf_porcentaje" />
                <field name="irpf_pagado" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="view_gestion_nomina_form" model="ir.ui.view">
        <field name="name">gestion.nomina.form</field>
        <field name="model">gestion.nomina</field>
        <field name="arch" type="xml">
            <form string="Nómina">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="employee_id" />
                            <field name="fecha" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="company_id" readonly="1" />
                            <field name="currency_id" invisible="1" />
                            <field name="sueldo_base" />
                            <field name="irpf_porcentaje" />
                            <field name="irpf_pagado" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Bonificaciones / Deducciones">
                            <field name="linea_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="tipo" />
                                    <field name="monto" />
                                </list>
                            </field>
                        </page>
                        <page string="Justificante">
                            <field name="justificante_pdf" filename="name" />
                        </page>
                    </notebook>
                    <group>
                        <group>
                            <field name="total_bonificaciones" readonly="1" />
                            <field name="total_deducciones" readonly="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas Bonificacion -->
    <record id="view_gestion_bonificacion_list" model="ir.ui.view">
        <field name="name">gestion.bonificacion.list</field>
        <field name="model">gestion.bonificacion</field>
        <field name="arch" type="xml">
            <list>
                <field name="nomina_id" />
                <field name="concepto" />
                <field name="importe_bruto" />
            </list>
        </field>
    </record>

    <record id="view_gestion_bonificacion_form" model="ir.ui.view">
        <field name="name">gestion.bonificacion.form</field>
        <field name="model">gestion.bonificacion</field>
        <field name="arch" type="xml">
            <form string="Bonificación / Deducción">
                <sheet>
                    <group>
                        <field name="nomina_id" />
                        <field name="concepto" />
                        <field name="importe_bruto" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas Declaracion -->
    <record id="view_gestion_declaracion_list" model="ir.ui.view">
        <field name="name">gestion.declaracion.list</field>
        <field name="model">gestion.declaracion</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="anio" />
                <field name="employee_id" />
                <field name="sueldo_bruto_total" />
                <field name="irpf_pagado_total" />
            </list>
        </field>
    </record>

    <record id="view_gestion_declaracion_form" model="ir.ui.view">
        <field name="name">gestion.declaracion.form</field>
        <field name="model">gestion.declaracion</field>
        <field name="arch" type="xml">
            <form string="Declaración">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="anio" />
                            <field name="employee_id" />
                        </group>
                        <group>
                            <field name="company_id" readonly="1" />
                            <field name="currency_id" invisible="1" />
                            <field name="sueldo_bruto_total" readonly="1" />
                            <field name="irpf_pagado_total" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Nóminas">
                            <field name="nomina_ids" context="{'default_employee_id': employee_id}">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="fecha" />
                                    <field name="sueldo_base" />
                                    <field name="irpf_pagado" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>